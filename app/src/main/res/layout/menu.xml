<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gr2">

        <ImageView
            android:id="@+id/ivHeaderLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/prozr70" />

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/ivHeaderLeft"
        app:layout_constraintBottom_toBottomOf="@+id/ivHeaderLeft"
        app:layout_constraintStart_toEndOf="@+id/ivHeaderLeft"
        app:layout_constraintEnd_toStartOf="@+id/ivHeaderRight"
        android:text="@string/menu"
        android:textColor="?colorPrimary"
        android:textSize="32sp" />

        <ImageView
            android:id="@+id/ivHeaderRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/prozr70" />

<!--    <ListView-->
<!--        android:id="@+id/ListView_Menu"-->
<!--        android:layout_width="fill_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:divider="@drawable/divider"-->
<!--        android:listSelector="@drawable/textured"-->
<!--        app:layout_constraintBottom_toBottomOf="parent"-->
<!--        app:layout_constraintEnd_toEndOf="parent"-->
<!--        app:layout_constraintStart_toStartOf="parent"-->
<!--        app:layout_constraintTop_toBottomOf="@+id/ivHeaderRight"-->
<!--        app:layout_constraintVertical_bias="0.0" />-->

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingTop="16dp"
        android:clipToPadding="false"
        android:paddingBottom="16dp"
        android:divider="@drawable/divider"
        android:listSelector="@drawable/textured"
        app:layout_constraintTop_toBottomOf="@+id/ivHeaderRight"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageView
            android:id="@+id/ivBottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/picture"
            android:scaleType="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/pazl_coner400" />

</androidx.constraintlayout.widget.ConstraintLayout>