<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/gr3">

    <ProgressBar
        android:id="@+id/progressBarStates"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_gravity="center"
        tools:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin_middle"
        android:layout_weight="1"
        android:id="@+id/quizLinearLayoutStates"
        tools:context="com.bartex.quizday.ui.flags.tabs.flag.FlagsFragment">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chip_region_states"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:chipSpacingHorizontal="5dp"
                app:singleLine="true"
                app:singleSelection="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_all_states"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/all" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_Europa_states"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Europa" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_Asia_states"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Asia"  />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_America_states"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/America" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_Oceania_states"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Oceania"  />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_Africa_states"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Africa"  />
            </com.google.android.material.chip.ChipGroup>
        </HorizontalScrollView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/questionsStub"
            android:id="@+id/questionTextView_states"
            android:layout_gravity="bottom|center_horizontal"
            android:gravity="center_horizontal"
            android:layout_margin="@dimen/layout_margin_8dp"
            android:textSize="@dimen/answer_size"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/MediumTextStub"
            android:id="@+id/answerTextView_states"
            android:layout_gravity="bottom|center_horizontal"
            android:gravity="center_horizontal"
            android:textSize="@dimen/answer_size"
            android:textStyle="bold"/>
    </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:paddingEnd="@dimen/activity_horizontal_margin_middle"
            android:layout_weight="1"
            android:gravity="center"
            tools:ignore="RtlSymmetry">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/row1LinearLayout_states">

            <ImageView
                android:id="@+id/button_states"
                style="@style/ImageAnswerStyleLand"
                android:contentDescription="@string/any_image"
                tools:src="@tools:sample/avatars[0]"/>

            <ImageView
                android:id="@+id/button2_states"
                style="@style/ImageAnswerStyleLand"
                android:contentDescription="@string/any_image"
                tools:src="@tools:sample/avatars[1]"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/row2LinearLayout_states">

            <ImageView
                android:id="@+id/button3_states"
                style="@style/ImageAnswerStyleLand"
                android:contentDescription="@string/any_image"
                tools:src="@tools:sample/avatars[2]"/>

            <ImageView
                android:id="@+id/button4_states"
                style="@style/ImageAnswerStyleLand"
                android:contentDescription="@string/any_image"
                tools:src="@tools:sample/avatars[3]"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/row3LinearLayout_states">

            <ImageView
                android:id="@+id/button5_states"
                style="@style/ImageAnswerStyleLand"
                android:contentDescription="@string/any_image"
                tools:src="@tools:sample/avatars[4]"/>

            <ImageView
                android:id="@+id/button6_states"
                style="@style/ImageAnswerStyleLand"
                android:contentDescription="@string/any_image"
                tools:src="@tools:sample/avatars[5]"/>
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
</LinearLayout>